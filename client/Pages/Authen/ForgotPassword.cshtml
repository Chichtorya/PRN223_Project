@page
@model Client.Pages.Authen.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container">
    <h1>Forgot Password</h1>
    <form id="forgotPasswordForm">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" required>
        </div>
        <button type="submit" class="btn btn-primary">Reset Password</button>
    </form>
</div>

<script>
    $(document).ready(function () {
        $('#forgotPasswordForm').submit(function (event) {
            event.preventDefault(); // Ngăn chặn việc gửi biểu mẫu bằng cách mặc định

            // Lấy địa chỉ email từ trường input
            var email = $('#email').val();

            // Gửi AJAX request để yêu cầu đặt lại mật khẩu
            $.ajax({
                url: '/Account/ForgotPassword',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ Email: email }),
                success: function (response) {
                    // Xử lý response từ server (nếu cần)
                    console.log(response);
                    alert('A password reset link has been sent to your email.');
                },
                error: function () {
                    console.log('Error requesting password reset.');
                }
            });
        });
    });
</script>